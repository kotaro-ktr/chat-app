<div class = "chat_header">
  <div class = "group_name_top">
    <div class = "group_name">
      <h1>momo</h1>
    </div>
  </div>
  <div class = "chat_end_top">
    <div class = "chat_end">
      <a href = "#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class = "chat_message">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'chat_form', local: true do |f| %>
  <div class = "form_input">
    <%= f.text_field :content, class: 'form_text', placeholder: 'type a message' %>
      <label class = "form_image">
        <span class = "image_file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
  <% end %>
</div>